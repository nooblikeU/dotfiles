configuration {
  display-drun: "Applications:";
  display-window: "Windows:";
  drun-display-format: "{name}";
  font: "Hack Nerd Font 10";
  modi: "window,run,drun";
  show-icons: true;
  icon-theme: "Papirus";
}

@theme "/home/john/.cache/wal/colors-rofi-dark.rasi"

* {

  
  border: 0;
  margin: 0;
  padding: 0;
  spacing: 0;
}

window {
  width: 30%;
}

element {
  padding: 5 12;
}

element-selected {
  border: 0;
}

element-text {
  text-color: inherit;
  /*vertical-align: 0.5;*/
}

element-icon {
  size: 14;
  padding: 0 10 0 0;
}

entry {
  padding: 12;
}

inputbar {
  children: [prompt, entry];
}

listview {
  columns: 1;
  lines: 10;
}

mainbox {
  children: [inputbar, listview];
}

prompt {
  enabled: true;
  padding: 12 0 0 12;
}
